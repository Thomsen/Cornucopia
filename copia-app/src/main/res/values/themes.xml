<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        // appcompat neeed one of the title
        <!-- windowActionBar true: activiy already has an action bar supplied by the window decor. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- need compileSdkVersion 31 -->
        <!--        Set the splash screen background, animated icon, and animation duration.-->
        <item name="windowSplashScreenBackground">@color/splashBackground</item>

        <!--        Use windowSplashScreenAnimatedIcon to add either a drawable or an-->
        <!--        animated drawable. One of these is required.-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/layer_launch_icon</item>
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!--        Set the theme of the Activity that directly follows your splash screen.-->
        <item name="postSplashScreenTheme">@style/AppTheme</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
