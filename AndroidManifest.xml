                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>
        <activity android:name="com.cornucopia.storage.ticketsmanager.AddTicketsActivity"></activity>
