<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csit.cornucopia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <activity android:name=".LoadingActivity" >
            <intent-filter >
				<action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Cornucopia" >
            <intent-filter >
				<action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        
            
        <activity
            android:label="Basic/Lifecycle/ActivityLifecycle"
            android:name="lifecycle.ActivityLifecycle" >

            <!-- android:configChanges="orientation|keyboardHidden" > -->
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.csit.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>
        <activity
            android:label="Basic/Lifecycle/LifecycleActivity"
            android:name="lifecycle.LifecycleActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.csit.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>

        <service android:name="lifecycle.ServiceLifecycle" >
        </service>

        <receiver android:name="lifecycle.BroadcastReceiverLifecycle" >
        </receiver>

        <activity
            android:label="Basic/Content Provider/FetchContacts"
            android:name="contentprovider.FetchContacts" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.csit.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>
        <activity
            android:label="Basic/Content Provider/AddContacts"
            android:name="contentprovider.AddContacts" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.csit.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

</manifest>