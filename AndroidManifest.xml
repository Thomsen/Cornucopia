            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>

        <service
            android:process=":remote"
            android:name="com.cornucopia.service.RemoteExService">
            <!-- INSTALL_PARSE_FAILED_MANIFEST_MALFORMED process="remote" -->
            <intent-filter >
                <action android:name="com.cornucopia.basic.service.IRemoteService" />
            </intent-filter>
        </service>

        <service android:name="com.cornucopia.lifecycle.ServiceLifecycle" >
        </service>

        <receiver android:name="com.cornucopia.lifecycle.BroadcastReceiverLifecycle" >
        </receiver>

        <!-- Device -->

        <activity android:name=".devices.PolicyAdminActivity"
            android:label="Device/Policy/General">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>

        <receiver android:name=".devices.PolicyAdminActivity$PolicyAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        
        <activity android:name=".devices.timer.TimerTaskActivity"
            android:label="Device/Task">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cornucopia.CATEGORY_CORNUCOPIA" />
            </intent-filter>
        </activity>
        
        <receiver android:name=".devices.timer.TimerTaskActivity$MyReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_LOW" />
                <action android:name="com.example.alarm" />
                <action android:name="com.example.alarmwakeup" />
            </intent-filter>
        </receiver>
        <receiver android:name=".devices.timer.AlarmTimerBroadcast" >
            <intent-filter>
                <action android:name="timer_restart" />
            </intent-filter>
        </receiver>
        
        <service android:name=".devices.timer.TestOnStartCommandService" />

