<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flipper" >


    <RelativeLayout
        android:id="@+id/rl_picture_original"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/picture_original"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/iv_image_original"
            android:layout_below="@+id/tv_title_original"
            android:layout_width="400dp"
            android:layout_height="400dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_picture_compress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_compress"
            android:layout_below="@+id/tv_title_compress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/picture_compress"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/iv_image_compress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_picture_android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/picture_android"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/iv_image_android"
            android:layout_below="@+id/tv_title_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ViewFlipper>
